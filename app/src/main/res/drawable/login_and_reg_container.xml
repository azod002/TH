<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Цвет фона -->
    <solid android:color="@color/secondary_container"/> <!-- Замените на нужный цвет -->

    <!-- Закругленные только верхние углы -->
    <corners
        android:topLeftRadius="36dp"
        android:topRightRadius="36dp"
        android:bottomLeftRadius="36dp"
        android:bottomRightRadius="36dp"/>


    <!-- (Опционально) Обводка -->
    <stroke
        android:width="2dp"
        android:color="@color/on_primary"/> <!-- Цвет обводки -->

    <!-- (Опционально) Отступы -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>

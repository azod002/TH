<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tehnics">

    <Button
        android:id="@+id/pomodoro_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/primary"
        android:text="Pomodoro"
        android:layout_margin="8dp"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/TimeBlocking_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/primary"
        android:text="@string/profile"
        android:layout_margin="8dp"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@+id/pomodoro_button"
        />

    <Button
        android:id="@+id/nine_two_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/primary"
        android:layout_margin="8dp"
        android:text="@string/profile"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toBottomOf="@+id/TimeBlocking_button"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:backgroundTint="@color/surface_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView

            android:id="@+id/tvDialogDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="Дата"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="left" />

        <LinearLayout
            android:id="@+id/llDialogPlansContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">
        </LinearLayout>

        <Button
            android:id="@+id/btnDialogAddPlan"
            android:backgroundTint="@color/primary"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить план"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
